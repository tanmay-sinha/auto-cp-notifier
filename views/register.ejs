<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">
                <i class="fas fa-user-plus"></i> Register
            </h1>
            <%- include ("./partials/messages") %> 
            <form action="/register" method="POST">

                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" required='true' class="form-control" placeholder="Enter Email"
                        value="<%= typeof email != 'undefined' ? email : '' %>" />
                </div>

                <div class="form-group">
                    <label for="site1">Codeforces &emsp; </label>
                    <input type="hidden" name="sites[0]" value="0">
                    <input type="checkbox" name="sites[0]" value="1">
                    <br>
                    <label for="site2">Atcoder  &emsp;&emsp; </label>
                    <input type="hidden" name="sites[1]" value="0">
                    <input type="checkbox" name="sites[1]" value="1">
                    <br>
                    <label for="site3">Codechef &emsp; </label>
                    <input type="hidden" name="sites[2]" value="0">
                    <input type="checkbox"  name="sites[2]" value="1">
                </div>

                <button type="submit" class="btn btn-primary btn-block">
                    Register
                </button>
            </form>
        </div>
    </div>
</div>